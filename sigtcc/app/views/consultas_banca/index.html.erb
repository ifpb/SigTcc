<h1>Consultar Banca</h1>
<p id="notice"><%= notice %></p>

<%= form_tag("/consulta_banca", method:"post", remote: true ) do %>

<%= label_tag(:buscaId, "Filtro de Busca: ") %>
<%= select_tag(:buscaId, options_for_select(['Sala', 'Data Apresentação'])) %>
<br/>
<%= label_tag(:termoBusca, "Termo de Busca: ") %>
<%= text_field_tag(:termoBusca) %>  

<%= submit_tag("Consultar") %>


<% end %>
