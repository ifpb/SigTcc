<p id="notice"><%= notice %></p>

<h1>Plano Atividades
<%= link_to 'Cadastrar Plano Atividade', new_plano_atividade_path, :class => "btn btn-sm btn-success pull-right" %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Título TCC</th>
      <th>Data de Entrega</th>
      <th>Aprovação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plano_atividades.each do |plano_atividade| %>
      <tr>
        <td><%= plano_atividade.tcc.titulo %></td>
        <td><%= plano_atividade.dataEntrega.strftime('%d/%m/%Y') %></td>
        <td>
          <% if plano_atividade.aprovacao %> 
            Sim 
          <% else %> 
            Não
          <% end %> 
        </td>
        <td>
          <div class="btn-group pull-right">
            <%= link_to 'Mostrar', plano_atividade, :class => "btn btn-sm btn-primary" %>
            <%= link_to 'Editar', edit_plano_atividade_path(plano_atividade), :class => "btn btn-sm btn-primary" %>
            <%= link_to 'Excluir', plano_atividade, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %></td>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

