<%= form_for(plano_atividade) do |f| %>
  <% if plano_atividade.errors.any? %>
    <div class="alert alert-danger alert-dismissible" id="error_explanation" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h2><%= pluralize(plano_atividade.errors.count, "error") %> prohibited this plano_atividade from being saved:</h2>
      <ul>
        <% plano_atividade.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="panel-body" style="padding: .5em 3em">
    <div class="form-group row">

      <div class="col-xs-12">
        <label for="">TCC</label>
        <%= f.select(:tcc_id, Tcc.all.collect {|p| [ p.titulo, p.id ]} , { include_blank: 'Selecione um TCC' }, { :class => 'form-control'} ) %>
      </div>

    </div>
    <div class="form-group row">

      <div class="col-xs-4">
        <label for="">Data de Entrega</label>
        <%= f.date_field :dataEntrega, class: "form-control" %>
      </div>
    
      <div class="col-xs-8">
        <%= f.label :aprovacao %>
        <div class="btn-group" data-toggle="buttons">

          <% if :aprovacao == true %>
            <label class="btn btn-info active">
          <% else %>
            <label class="btn btn-info">
          <% end %>
              <span>Sim</span><%= radio_button_tag(:aprovacao, true) %>
            </label>

          <% if :aprovacao == false %>
            <label class="btn btn-default">
          <% else %>
            <label class="btn btn-default active">
          <% end %>
              <span>NÃ£o</span><%= radio_button_tag(:aprovacao, false) %>
            </label>

        </div>
      </div>

    </div>
    <div class="form-group row">

      <%= f.submit "Salvar", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored col-xs-2", style: "float:right;margin-left:1em" %>

    </div>
  </div>
<% end %>
