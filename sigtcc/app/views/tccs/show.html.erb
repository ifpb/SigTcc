<div class="content-row col-xs-2"></div>
<div class="content-row col-xs-8">
  <% if ! notice.blank? %>
  <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong style="color:green" id="notice"><%= notice %></strong>
  </div>
  <% end %>

  <div class="panel panel-default">

      <div class="panel-heading">
        <h3>
          <%= @tcc.titulo %>
        </h3>
      </div>

      <div class="panel-body">  
        <p>
          <strong>Periodo:</strong>
          <%= @tcc.periodo %>
        </p>

        <p>
          <strong>Tipos:</strong>
          <%= @tcc.tipos %>
        </p>
        <p>
          <strong>Palavras-Chaves:</strong>
          <% @tcc.palavras.each do |palavra| %>
             <%= palavra.nome %>
          <% end -%>
        </p>
        <p>
          <strong>Agendado:</strong>
          <%= @tcc.agendad %>
        </p>
      </div>

      <div class="panel-footer">
          <%= link_to 'Voltar', tccs_path, class: "btn btn-default" %>
          <%= link_to 'Editar', edit_tcc_path(@tcc), class: "btn btn-default" %>
          <%= link_to 'Visualizar arquivo TCC', @tcc.arquivo.url, class: "btn btn-default" %>
      </div>

  </div>
</div>
<div class="content-row col-xs-2"></div>